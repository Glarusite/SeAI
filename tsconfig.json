{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "lib": ["ESNext"],
    "paths": {
      "@src/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "**/*.web.ts",
    "**/*.web.tsx",
  ]
}
